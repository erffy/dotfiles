#
# Application Startup
#

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

exec_always --no-startup-id $HOME/.config/sway/scripts.d/wallpaper.sh
exec_always --no-startup-id autotiling-rs
exec_always --no-startup-id swaymsg seat seat0 xcursor_theme Bibata_Ghost

exec /usr/lib/polkit-kde-authentication-agent-1
exec wl-paste --watch clipman store --no-persist